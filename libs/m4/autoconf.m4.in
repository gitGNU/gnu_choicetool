dnl m4_define([_CT_PATH_PROG],[
dnl dnl Extract the first word of "$2", so it can be a program name with args.
dnl set dummy $2; ac_word=[$]2
dnl AC_MSG_CHECKING([for $ac_word])
dnl AC_CACHE_VAL(ac_cv_path_$1,
dnl [case "[$]$1" in
dnl   /*)
dnl   ac_cv_path_$1="[$]$1" # Let the user override the test with a path.
dnl   ;;
dnl   ?:/*)
dnl   ac_cv_path_$1="[$]$1" # Let the user override the test with a dos path.
dnl   ;;
dnl   *)
dnl   IFS="${IFS=   }"; ac_save_ifs="$IFS"; IFS=":"
dnl dnl $ac_dummy forces splitting on constant user-supplied paths.
dnl dnl POSIX.2 word splitting is done only on the output of word expansions,
dnl dnl not every word.  This closes a longstanding sh security hole.
dnl   ac_dummy="ifelse([$4], , $PATH, [$4])"
dnl   for ac_dir in $ac_dummy; do
dnl     test -z "$ac_dir" && ac_dir=.
dnl     if test -f $ac_dir/$ac_word; then
dnl       ac_cv_path_$1="$ac_dir/$ac_word"
dnl       break
dnl     fi
dnl   done
dnl   IFS="$ac_save_ifs"
dnl dnl If no 3rd arg is given, leave the cache variable unset,
dnl dnl so AC_PATH_PROGS will keep looking.
dnl ifelse([$3], , , [  test -z "[$]ac_cv_path_$1" && ac_cv_path_$1="$3"
dnl ])dnl
dnl  ;;
dnl esac])dnl
dnl $1="$ac_cv_path_$1"
dnl if test -n "[$]$1"; then
dnl   AC_MSG_RESULT([$]$1)
dnl else
dnl   AC_MSG_RESULT(no)
dnl fi
dnl AC_SUBST($1)dnl
dnl ])
