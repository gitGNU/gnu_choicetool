m4_define([m4_location],[__file__:__line__])

#
# m4_fatal(MSG, [EXIT-STATUS])
#
m4_define([m4_fatal],[
  m4_errprint(m4_location[: error: $1])
  m4_exit(m4_ifelse([$2],, 1, [$2]))
])

m4_define([m4_assert],[
  m4_ifelse(m4_eval([$1]),0,[
    m4_fatal([assertion failed: $1], [$2])
  ])
])
